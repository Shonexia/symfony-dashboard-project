{% extends 'base.html.twig' %}
{% block title %}Hello DashboardController!
{% endblock %}
{% block body %}
	<div class="example-wrapper">
		<h1>Hello
			{{ app.user.email }}! 🍔🍕</h1>
		<h1>{{ app.user.firstName }}
			{{ app.user.lastName }}
			🍔🍕</h1>

		this is your name:
		<br>
		and you are just an ADMIN
		<br>
		{% if is_granted('ROLE_ADMIN') %}

			<button class="btn btn-danger mt-5 mb-5">Delete</button>
		{% endif %}
		<a href="{{ path('dashboard-logout') }}" class="btn btn-danger">Logout</a>
	</div>
{% endblock %}
